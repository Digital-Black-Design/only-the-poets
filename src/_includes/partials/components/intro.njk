<header>
  <div class="[ intro ] [ bg-dark ] [ pad-top-900 ]"></div>

  <div class="[ inner-wrapper no-pad ] [ sf-flow ]">
    <div class="[ intro-pull ] [ pad-top-700 pad-right-900 pad-bottom-700 pad-left-700 ] [ sf-flow ] [ bg-light ]">
      <h1 class="[ intro__heading{{ ' intro__heading--compact' if page.url === '/' }} ] [ text-800 md:text-900 leading-tight ] [ p-name ]">{{ introHeading }}</h1>
      {% if introSummary %}
        <div class="[ intro__summary ] [ sf-flow ] [ leading-mid measure-short ]">{{ introSummary | safe }}</div>
      {% endif %}
    </div>
  </div>
</header>
