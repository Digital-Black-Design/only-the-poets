{% if navigation.items %}
  <nav class="nav" aria-label="{{ariaLabel}}">
    <ul class="[ nav__list ] [ box-flex align-center md:space-before ]">
      {% for item in navigation.items %}
        {% set current = '' %}
        {% set target = '' %}
        {% set rel = '' %}

        {% if item.rel %}
          {% set rel = ' rel="' + item.rel + '"' %}
        {% endif %}

        {% if item.external %}
          {% set target = ' target="_blank"' %}
        {% endif %}

        {% if page.url == item.url %}
          {% set current = ' aria-current="page"' %}
        {% endif %}

        <li class="nav__item">
          <a href="{{ item.url }}"{{ rel | safe }}{{ current | safe }}{{ target | safe }}>{{ item.text }}</a>
        </li>
      {% endfor %}
    </ul>
  </nav>
{% endif %}
